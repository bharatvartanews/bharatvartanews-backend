generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String?
  role      Role
  active    Boolean   @default(true)
  createdAt DateTime  @default(now())
  googleId  String?   @unique
  articles  Article[]
  comments  Comment[]

  @@index([role])
  @@index([active])
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  active    Boolean   @default(true)
  deletedAt DateTime?
  icon      String?
  articles  Article[]

  @@index([slug])
  @@index([active])
  @@index([deletedAt])
}

model Article {
  id         Int            @id @default(autoincrement())
  title      String
  slug       String         @unique
  body       String
  status     ArticleStatus
  categoryId Int
  authorId   Int
  image      String?
  video      String?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  deletedAt  DateTime?
  authorName String?
  author     User           @relation(fields: [authorId], references: [id])
  category   Category       @relation(fields: [categoryId], references: [id])
  media      ArticleMedia[]
  views      ArticleView[]
  comments   Comment[]

  @@index([status])
  @@index([categoryId])
  @@index([authorId])
  @@index([deletedAt])
  @@index([createdAt])
}

model ArticleMedia {
  id        Int       @id @default(autoincrement())
  articleId Int
  url       String
  createdAt DateTime  @default(now())
  type      MediaType
  article   Article   @relation(fields: [articleId], references: [id])
}

model Video {
  id        Int         @id @default(autoincrement())
  title     String
  url       String?
  status    VideoStatus
  createdAt DateTime    @default(now())
  deletedAt DateTime?
  views     VideoView[]

  @@index([status])
  @@index([deletedAt])
  @@index([createdAt])
}

model Media {
  id        Int       @id @default(autoincrement())
  type      MediaType
  path      String
  createdAt DateTime  @default(now())

  @@index([type])
}

model PageView {
  id        Int      @id @default(autoincrement())
  path      String
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([path])
  @@index([createdAt])
}

model ArticleView {
  id        Int      @id @default(autoincrement())
  articleId Int
  createdAt DateTime @default(now())
  article   Article  @relation(fields: [articleId], references: [id])

  @@index([articleId])
  @@index([createdAt])
}

model VideoView {
  id        Int      @id @default(autoincrement())
  videoId   Int
  createdAt DateTime @default(now())
  video     Video    @relation(fields: [videoId], references: [id])

  @@index([videoId])
  @@index([createdAt])
}

model Setting {
  id   Int  @id @default(1)
  data Json
}

model Comment {
  id        Int             @id @default(autoincrement())
  content   String
  articleId Int
  userId    Int?
  ownerKey  String?
  createdAt DateTime        @default(now())
  parentId  Int?
  article   Article         @relation(fields: [articleId], references: [id])
  user      User?           @relation(fields: [userId], references: [id])
  reports   CommentReport[]
}

model Share {
  id        Int      @id @default(autoincrement())
  articleId Int
  platform  String
  createdAt DateTime @default(now())
}

model CommentReport {
  id        Int      @id @default(autoincrement())
  commentId Int
  reason    String?
  createdAt DateTime @default(now())
  comment   Comment  @relation(fields: [commentId], references: [id])

  @@index([commentId])
}

enum Role {
  SUPER_ADMIN
  EDITOR
  REPORTER
  PUBLIC_USER
}

enum ArticleStatus {
  DRAFT
  REVIEW
  PUBLISHED
}

enum VideoStatus {
  DRAFT
  REVIEW
  PUBLISHED
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
}
